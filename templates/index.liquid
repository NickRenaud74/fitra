{% assign mainProduct = all_products['fitra-activity-band'] %}

<div id="page-index">
    <div id="product-images">
      {% for image in mainProduct.images %}
        <div 
          class="single-product-image sticky-side-image" 
            {% if image.attached_to_variant? %}
              data-variant="{{image.variants.first.id}}"
            {% endif %}
            {% if forloop.index > 1 %}
              style="display: none;"
            {% endif %}
        >
          <img src="{{ image | img_url: "x1440"}}" alt="fitra activity band">
        </div>
      {% endfor %}
    </div>

  <div id="product-info" class="main-content grid">
    <div class="valign-center">
      <h1 class="headline-big">{{ mainProduct.title | remove: ' Activity Band' }}</h1>
    </div>

    <div class="grid two-columns">
      <div class="headline valign-bottom">
        <h2>{{ "product.copy.headline" | t }}</h2>
      </div>

      <div class="description">
        <h3>{{ "product.copy.description_headline" | t }}</h3>
        <div class="description-content">
          {{ mainProduct.description }} 
        </div>
      </div>

      <div class="details">
        <ul class="list-with-stroke">
          <li>{{ "product.details_list.item1" | t }}</li>
          <li>{{ "product.details_list.item2" | t }}</li>
        </ul>
      </div>

      <div class="form-wrapper">
        <form
          action="/cart/add"
          method="POST"
          enctype="multipart/form-data"
          id="add-to-cart-form"
        >
          <label for="productSelect">{{ mainProduct.options.first }}</label>
          <div class="styled-select">
            <select name="id" id="productSelect">
              {% for variant in mainProduct.variants %}
                <option id="option" value="{{ variant.id }}">
                  {{ variant.title }}
                </option>
              {% endfor %}
            </select>
            <div class="select-arrow">
              <img src="{{'icon-arrow-down.svg' | asset_url }}" alt="">
            </div>
          </div>

          <button type="submit" name="add" id="add-to-cart">
            {{ "product.form.submit" | t }}
            <span
              class="product-price"
              >{{mainProduct.price | money_without_trailing_zeros}}</span
            >
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

